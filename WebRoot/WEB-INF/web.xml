<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp_ID">
<!-- 配置过滤器，用来检查session中是否存在用户登录账号信息
	<filter>
		<filter-name>ChkSessionFilter</filter-name>
		<filter-class>seeyou.filter.ChkNoSessionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ChkSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
 -->
	<servlet><!-- 配置请求Action到Controller的映射 -->
		<servlet-name>enterServlet</servlet-name>
		<servlet-class>seeyou.controller.RedirectToIndexServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>findServlet</servlet-name>
		<servlet-class>seeyou.controller.FQueryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>findServlet</servlet-name>
		<url-pattern>/f</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>enterServlet</servlet-name>
		<url-pattern>/seeyou</url-pattern>
	</servlet-mapping>
	
</web-app>